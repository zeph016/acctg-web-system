                selectedRFPDModelEdit.Remarks = string.IsNullOrEmpty(selectedRFPDModelEdit.Remarks) ? "None" : (selectedRFPDModelEdit.Remarks);
            }
            break;
        }
        openEditDrawer = !openEditDrawer;
        TotalAmount();
